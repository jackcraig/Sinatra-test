<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="apple-touch-icon" href="apple-touch-icon.png">

        <link rel="stylesheet" href="css/normalize.min.css">
        <link rel="stylesheet" href="css/main.css">

        <script src="js/vendor/modernizr-2.8.3.min.js"></script>
        <script src="https://use.typekit.net/hxe8rmq.js"></script>
		<script>try{Typekit.load({ async: true });}catch(e){}</script>
    </head>
    <body>


    <div class="wrapper">

	    <div class="listing">
			<% @properties["listing"].each do | item | %>
				<div class="listing__details">
					<h2 class="listing__title"><a href="<%= item["details_url"] %>" class="listing__title-link" ><%= item["displayable_address"] %></a></h2>
					<p class="listing__description"><%= item["description"] %></p>
					<p class="listing__price">&pound;<%= item["price"] %></p>
					<img class="listing__photo" src='<%= item["image_url"] %>' alt="" >
				</div>

				<% unless item["floor_plan"] == nil %>
					<img src='<%= item["floor_plan"][0] %>' alt="Floorplan" class="listing__floorplan" >
				<% end %>


			<% end %>
		</div>

	</div>


        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')</script>
        <script src="js/main.js"></script>
    </body>
</html>
